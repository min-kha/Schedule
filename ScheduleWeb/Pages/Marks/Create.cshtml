@page
@model ScheduleWeb.Pages.Marks.CreateModel

@{
    var folderName = new System.IO.DirectoryInfo(Request.Path).Parent?.Name; ViewData["Title"] = $"{folderName} Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Mark</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mark.SubjectId" class="control-label"></label>
                <select asp-for="Mark.SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Mark.ClassroomId" class="control-label"></label>
                <select asp-for="Mark.ClassroomId" class ="form-control" asp-items="ViewBag.ClassroomId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Mark.StudentId" class="control-label"></label>
                <select asp-for="Mark.StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Mark.Mark1" class="control-label"></label>
                <input asp-for="Mark.Mark1" class="form-control" />
                <span asp-validation-for="Mark.Mark1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mark.Percent" class="control-label"></label>
                <input asp-for="Mark.Percent" class="form-control" />
                <span asp-validation-for="Mark.Percent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mark.Name" class="control-label"></label>
                <input asp-for="Mark.Name" class="form-control" />
                <span asp-validation-for="Mark.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
