        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Timetable.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Timetable.Room.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Timetable.Slot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Timetable.Slot.Name)
        </dd>
        <dt class="col-sm-2">
