@model ScheduleWeb.Pages.Timetables.DetailsModel

@{
    var folderName = new System.IO.DirectoryInfo(Request.Path).Parent?.Name; ViewData["Title"] = $"{folderName} Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Timetable</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Timetable.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Timetable.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Timetable.Classroom)
        </dt>
        <dd class="col-sm-10">
